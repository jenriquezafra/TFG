  "name": "My Dev Environment",
  "image": "mcr.microsoft.com/devcontainers/python:3.9", // Imagen con Python preinstalado
  "customizations": {
    "vscode": {
      "settings": {
        "python.defaultInterpreterPath": "/usr/local/bin/python3"
